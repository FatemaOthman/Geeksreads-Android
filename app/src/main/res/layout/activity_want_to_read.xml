<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayoutWantRead"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReadBooksActivity">

  <include
      android:id="@+id/toolbar"
      layout="@layout/toolbar"/>
  <!-- Progress bar overlay; shown while progress -->
  <include layout="@layout/include_loading"/>
  <android.support.v4.widget.SwipeRefreshLayout
      android:id="@+id/WantSwipeLayout"
      style="@style/SwipeRefreshingLayout"
      tools:context=".ReadBooksActivity">

    <ListView
        android:id="@+id/WantToReadBookList"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
  </android.support.v4.widget.SwipeRefreshLayout>

</LinearLayout>
