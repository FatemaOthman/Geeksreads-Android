<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Profile"
    tools:layout_editor_absoluteY="25dp">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar">


    </include>

    <LinearLayout
        android:id="@+id/OtherProfile"
        android:layout_width="match_parent"
        android:layout_height="289dp"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/UserProfilePhoto"
            android:layout_width="113dp"
            android:layout_height="92dp"
            android:layout_marginBottom="20dp"
            android:contentDescription="@string/OtherProfilePicture"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/toolbar"
            app:layout_constraintVertical_bias="0.0"
            tools:srcCompat="@tools:sample/avatars" />


        <TextView
            android:id="@+id/OtherUserName"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:text="@string/OtherProfileName"
            android:textAlignment="center" />

        <View
            android:id="@+id/DividerProfile"
            android:layout_width="270dp"
            android:layout_height="3dp"
            android:background="@color/colorToolbar"
            android:backgroundTint="@color/colorToolbar" />

        <TextView
            android:id="@+id/OtherNumberBooks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:paddingTop="0dp"
            android:paddingEnd="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp"
            android:text="@string/OtherBooks"
            android:textAlignment="center" />

        <Button
            android:id="@+id/Follow_Unfollow"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:background="@color/color0"
            android:clickable="true"
            android:contentDescription="@string/FollowUnfollow"
            android:drawableStart="@mipmap/ic_launcher_round"
            android:drawablePadding="6dp"
            android:focusable="true"
            android:gravity="start"
            android:text="@string/FollowUnfollow"
            android:textAlignment="center" />

    </LinearLayout>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/swipelayout"
        style="@style/SwipeRefreshingLayout"
        tools:context=".Profile">

        <ListView
            android:id="@+id/MyBookList"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v4.widget.SwipeRefreshLayout>


</LinearLayout>